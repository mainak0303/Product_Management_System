<!DOCTYPE html>
<html>
  <head>
    <title>Product List</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  </head>
  <body>
    <%- include('../../layouts/header') %>

    <div class="container py-5">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0">Product List</h1>
        <a href="/admin/products/add" class="btn btn-primary">
          <i class="bi bi-plus-lg"></i> Add Product
        </a>
      </div>

      <% if (messages.error) { %>
        <div class="alert alert-danger"><%= messages.error %></div>
      <% } %>
      <% if (messages.success) { %>
        <div class="alert alert-success"><%= messages.success %></div>
      <% } %>

      <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
          <thead class="table-dark">
            <tr>
              <th>Name</th>
              <th>Category</th>
              <th>Description</th>
              <th>Image</th>
              <th style="width:160px;">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% products.forEach(function(product) { %>
              <tr>
                <td><%= product.name %></td>
                <td><%= product.category ? product.category.name : '' %></td>
                <td><%= product.description %></td>
                <td>
                  <% if (product.image) { %>
                    <img src="/uploads/<%= product.image %>" alt="Product image" class="img-thumbnail" style="max-width: 100px;" />
                  <% } %>
                </td>
                <td>
                  <a href="/admin/products/edit/<%= product._id %>" class="btn btn-sm btn-warning me-2">
                    <i class="bi bi-pencil-square"></i> Edit
                  </a>
                  <form action="/admin/products/delete/<%= product._id %>" method="POST" class="d-inline">
                    <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Delete this product?')">
                      <i class="bi bi-trash"></i> Delete
                    </button>
                  </form>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>

      <a href="/admin" class="btn btn-secondary mt-4">
        <i class="bi bi-arrow-left"></i> Back to Dashboard
      </a>
    </div>

    <%- include('../../layouts/footer') %>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
