<!DOCTYPE html>
<html>
  <head>
    <title>Add Category</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  </head>
  <body>
    <%- include('../../layouts/header') %>

    <div class="container py-5">
      <div class="row justify-content-center">
        <div class="col-md-6">
          <h1 class="mb-4">Add Category</h1>
          <% if (messages.error) { %>
            <div class="alert alert-danger"><%= messages.error %></div>
          <% } %>
          <form action="/admin/categories/add" method="POST" class="card p-4 shadow-sm">
            <div class="mb-3">
              <label for="categoryName" class="form-label">Category Name:</label>
              <input type="text" name="name" id="categoryName" class="form-control" required autofocus>
            </div>
            <button type="submit" class="btn btn-success"><i class="bi bi-plus-lg"></i> Add Category</button>
            <a href="/admin/categories" class="btn btn-secondary ms-2"><i class="bi bi-arrow-left"></i> Back to List</a>
          </form>
        </div>
      </div>
    </div>

    <%- include('../../layouts/footer') %>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
