<!DOCTYPE html>
<html>
  <head>
    <title>Categories</title>
    <!-- Bootstrap CSS CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  </head>
  <body>
    <%- include('../../layouts/header') %>

    <div class="container py-5">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0">Category List</h1>
        <a href="/admin/categories/add" class="btn btn-primary">
          <i class="bi bi-plus-lg"></i> Add Category
        </a>
      </div>

      <% if (messages.error) { %>
        <div class="alert alert-danger"><%= messages.error %></div>
      <% } %>
      <% if (messages.success) { %>
        <div class="alert alert-success"><%= messages.success %></div>
      <% } %>

      <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
          <thead class="table-dark">
            <tr>
              <th>Name</th>
              <th>Slug</th>
              <th style="width:160px;">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% categories.forEach(function(category) { %>
              <tr>
                <td><%= category.name %></td>
                <td><span class="badge bg-secondary"><%= category.slug %></span></td>
                <td>
                  <a href="/admin/categories/edit/<%= category._id %>" class="btn btn-sm btn-warning me-2">
                    <i class="bi bi-pencil-square"></i> Edit
                  </a>
                  <form action="/admin/categories/delete/<%= category._id %>" method="POST" class="d-inline">
                    <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure?')">
                      <i class="bi bi-trash"></i> Delete
                    </button>
                  </form>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
      <a href="/admin" class="btn btn-secondary mt-4"><i class="bi bi-arrow-left"></i> Back to Dashboard</a>
    </div>

    <%- include('../../layouts/footer') %>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
