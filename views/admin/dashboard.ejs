<!DOCTYPE html>
<html>

<head>
    <title>Admin Dashboard</title>
    <!-- Bootstrap CSS CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>

<body class="bg-light">
    <%- include('../layouts/header') %>

        <div class="container py-5">
            <h1 class="mb-4">Admin Dashboard</h1>

            <% if (messages.error) { %>
                <div class="alert alert-danger">
                    <%= messages.error %>
                </div>
                <% } %>
                    <% if (messages.success) { %>
                        <div class="alert alert-success">
                            <%= messages.success %>
                        </div>
                        <% } %>

                            <div class="row mb-5">
                                <div class="col-md-6">
                                    <div class="card shadow-sm mb-3">
                                        <div class="card-body">
                                            <h5 class="card-title text-primary">Total Products</h5>
                                            <p class="display-6">
                                                <%= totalProducts %>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="card shadow-sm mb-3">
                                        <div class="card-body">
                                            <h5 class="card-title text-success">Total Categories</h5>
                                            <p class="display-6">
                                                <%= totalCategories %>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="d-flex gap-3">
                                <a href="/admin/products" class="btn btn-primary btn-lg shadow">
                                    <i class="bi bi-boxes"></i> Manage Products
                                </a>
                                <a href="/admin/categories" class="btn btn-success btn-lg shadow">
                                    <i class="bi bi-tags"></i> Manage Categories
                                </a>
                            </div>
        </div>

        <%- include('../layouts/footer') %>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
            <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
</body>

</html>