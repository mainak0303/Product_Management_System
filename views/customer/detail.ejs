<!DOCTYPE html>
<html>
  <head>
    <title><%= product.name %> - Product Details</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  </head>
  <body>
    <%- include('../layouts/header') %>

    <div class="container py-5">

      <a href="/" class="btn btn-secondary mb-4">
        <i class="bi bi-arrow-left"></i> Back to Products
      </a>

      <div class="row">
        <div class="col-md-6">
          <% if (product.image) { %>
            <img src="/uploads/<%= product.image %>" alt="<%= product.name %>" class="img-fluid rounded shadow-sm" />
          <% } else { %>
            <div class="bg-secondary text-white d-flex align-items-center justify-content-center"
                 style="height: 400px; font-size: 1.5rem; border-radius: 0.375rem;">
              No Image Available
            </div>
          <% } %>
        </div>
        <div class="col-md-6">
          <h1><%= product.name %></h1>
          <p class="text-muted">Category: <%= product.category ? product.category.name : 'N/A' %></p>
          <hr />
          <p><%= product.description || 'No description available.' %></p>
        </div>
      </div>
    </div>

    <%- include('../layouts/footer') %>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
