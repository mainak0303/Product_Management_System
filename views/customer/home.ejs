<!DOCTYPE html>
<html>
  <head>
    <title>Product Portal - Home</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  </head>
  <body>
    <%- include('../layouts/header') %>

    <div class="container py-5">
      <h1 class="mb-4">All Products</h1>

      <form method="GET" class="row g-3 mb-4">
        <div class="col-md-4">
          <select name="category" class="form-select">
            <option value="">-- Filter by Category --</option>
            <% categories.forEach(cat => { %>
              <option value="<%= cat._id %>" <%= selectedCategory == cat._id ? 'selected' : '' %>>
                <%= cat.name %>
              </option>
            <% }) %>
          </select>
        </div>

        <div class="col-md-5">
          <input
            type="text"
            name="keyword"
            class="form-control"
            placeholder="Search products..."
            value="<%= searchTerm %>"
          />
        </div>

        <div class="col-md-3">
          <button type="submit" class="btn btn-primary w-100">
            <i class="bi bi-search"></i> Search
          </button>
        </div>
      </form>

      <% if (products.length === 0) { %>
        <div class="alert alert-warning">No products found.</div>
      <% } else { %>
        <div class="row row-cols-1 row-cols-md-3 g-4">
          <% products.forEach(product => { %>
            <div class="col">
              <div class="card h-100 shadow-sm">
                <% if (product.image) { %>
                  <img
                    src="/uploads/<%= product.image %>"
                    alt="<%= product.name %>"
                    class="card-img-top"
                    style="height: 180px; object-fit: cover;"
                  />
                <% } else { %>
                  <div class="bg-secondary text-white d-flex align-items-center justify-content-center" 
                       style="height:180px; font-size:1.25rem;">
                    No Image
                  </div>
                <% } %>
                <div class="card-body d-flex flex-column">
                  <h5 class="card-title"><%= product.name %></h5>
                  <p class="card-text text-truncate"><%= product.description %></p>
                  <p class="text-muted mb-2"><small>Category: <%= product.category ? product.category.name : 'N/A' %></small></p>
                  <a href="/product/<%= product.slug %>" class="btn btn-primary mt-auto">View Details</a>
                </div>
              </div>
            </div>
          <% }) %>
        </div>
      <% } %>
    </div>

    <%- include('../layouts/footer') %>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
